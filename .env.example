# ===========================================
# CronosAI Ops - Environment Variables
# IMPORTANT: NEVER commit .env file with real values
# Copy this file to .env and fill in your actual values
# ===========================================

# -------------------------------------------
# Claude API (Anthropic)
# -------------------------------------------
# Get from: https://console.anthropic.com/
# Format: sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# DO NOT commit real API keys to the repository
ANTHROPIC_API_KEY=

# -------------------------------------------
# Cronos Blockchain
# -------------------------------------------

# Mainnet RPC URL
CRONOS_RPC_URL=https://evm.cronos.org
CHAIN_ID=25

# Testnet (para desarrollo)
# CRONOS_RPC_URL=https://evm-t3.cronos.org
# CHAIN_ID=338

# Explorer API (para contract.scan)
# Get from: https://cronoscan.com/apis
# DO NOT commit real API keys to the repository
CRONOS_EXPLORER_API=https://api.cronoscan.com/api
CRONOS_EXPLORER_API_KEY=

# -------------------------------------------
# x402 Payment Protocol
# -------------------------------------------

# Facilitator URL
# Mainnet: https://x402-facilitator.cronos.org
# Testnet: https://x402-facilitator-testnet.cronos.org
X402_FACILITATOR_URL=https://x402-facilitator.cronos.org

# Wallet Address that RECEIVES payments
# Create a new wallet specifically for this service
# Format: 0x followed by 40 hex characters
# SECURITY: Never use a wallet with real funds or that you reuse elsewhere
RECIPIENT_ADDRESS=

# -------------------------------------------
# Service Wallet (para on-chain queries)
# -------------------------------------------

# Private key for on-chain transactions
# SECURITY: DO NOT commit real private keys to the repository
# This should be different from the recipient wallet
# Only needed if making calls that require signing
# Format: 0x followed by 64 hex characters
PRIVATE_KEY=

# -------------------------------------------
# App Configuration
# -------------------------------------------

PORT=3000
NODE_ENV=development

# Frontend URL (for CORS configuration)
# Adjust based on your frontend development server
FRONTEND_URL=http://localhost:5173

# -------------------------------------------
# Development Flags
# -------------------------------------------

# Skip x402 payments during development (true/false)
SKIP_X402=false

# Log level: debug | info | warn | error
LOG_LEVEL=debug

# -------------------------------------------
# VVS Finance (para tx.simulate)
# -------------------------------------------
# These are public contract addresses (no security risk)
VVS_ROUTER_ADDRESS=0x145863Eb42Cf62847A6Ca784e6416C1682b1b2Ae
VVS_FACTORY_ADDRESS=0x3B44B2a187a7b3824131F8db5a74194D0a42Fc15
